{
    "comments": {
      "lineComment": "#"
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
      { "open": "'", "close": "'", "notIn": ["string", "comment"] }
      // Add rules for """ and ''' if/when grammar supports multiline strings
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["\"", "\""],
      ["'", "'"]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
  }